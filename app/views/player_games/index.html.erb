<p id="notice"><%= notice %></p>

<h1>Player Games</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Team</th>
      <th>Date</th>
      <th>Opponent</th>
      <th>Minutes played</th>
      <th>Fg</th>
      <th>Fga</th>
      <th>Fgp</th>
      <th>Threep</th>
      <th>Threepa</th>
      <th>Threepp</th>
      <th>Ft</th>
      <th>Fta</th>
      <th>Ftp</th>
      <th>Orb</th>
      <th>Drb</th>
      <th>Trb</th>
      <th>Ast</th>
      <th>Stl</th>
      <th>Blk</th>
      <th>Tov</th>
      <th>Pf</th>
      <th>Pts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_games.each do |player_game| %>
      <tr>
        <td><%= player_game.player_id %></td>
        <td><%= player_game.team_id %></td>
        <td><%= player_game.date %></td>
        <td><%= player_game.opponent_id %></td>
        <td><%= player_game.minutes_played %></td>
        <td><%= player_game.fg %></td>
        <td><%= player_game.fga %></td>
        <td><%= player_game.fgp %></td>
        <td><%= player_game.threep %></td>
        <td><%= player_game.threepa %></td>
        <td><%= player_game.threepp %></td>
        <td><%= player_game.ft %></td>
        <td><%= player_game.fta %></td>
        <td><%= player_game.ftp %></td>
        <td><%= player_game.orb %></td>
        <td><%= player_game.drb %></td>
        <td><%= player_game.trb %></td>
        <td><%= player_game.ast %></td>
        <td><%= player_game.stl %></td>
        <td><%= player_game.blk %></td>
        <td><%= player_game.tov %></td>
        <td><%= player_game.pf %></td>
        <td><%= player_game.pts %></td>
        <td><%= link_to 'Show', player_game %></td>
        <td><%= link_to 'Edit', edit_player_game_path(player_game) %></td>
        <td><%= link_to 'Destroy', player_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

